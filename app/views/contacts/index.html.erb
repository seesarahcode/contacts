<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Contacts</h1>
    <%= link_to 'New contact', new_contact_path, class: "rounded-lg py-3 px-5 shadow bg-green-500 transition colors hover:bg-green-700 text-white block font-medium" %>
  </div>

  <div id="contacts" class="min-w-full">
    <%= render @contacts %>
  </div>
</div>
