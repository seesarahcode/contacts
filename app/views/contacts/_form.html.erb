<%= form_with(model: contact, class: "contents") do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-wrap -mx-2 my-5 space-y-4 md:space-y-0">
    <div class="w-full px-2 md:w-1/2">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", placeholder: "Sam" %>
    </div>

    <div class="w-full px-2 md:w-1/2">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", placeholder: "Jackson"  %>
    </div>
  </div>

  <div class="flex flex-wrap -mx-2 my-5 space-y-4 md:space-y-0">

    <div class="w-full px-2 md:w-1/3">
      <%= form.label :email %>
      <%= form.text_field :email, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", placeholder: "name@email.com"  %>
    </div>

    <div class="w-full px-2 md:w-1/3">
      <%= form.label :phone %>
      <%= form.text_field :phone, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", placeholder: "111-222-3333"  %>
    </div>

    <div class="w-full px-2 md:w-1/3">
      <%= form.label :birthday %>
      <%= form.date_field :birthday, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

  </div>
  <div class="flex flex-wrap -mx-2 my-5 space-y-4 md:space-y-0">

    <div class="w-full px-2 md:w-1/4">
      <%= form.label :street_address %>
      <%= form.text_field :street_address, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", placeholder: "1234 Main St."  %>
    </div>
    <div class="w-full px-2 md:w-1/4">
      <%= form.label :city %>
      <%= form.text_field :city, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", placeholder: "Columbus"  %>
    </div>
    <div class="w-full px-2 md:w-1/4">
      <%= form.label :state %>
      <%= form.text_field :state, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", placeholder: "Ohio "  %>
    </div>
    <div class="w-full px-2 md:w-1/4">
      <%= form.label :zip_code %>
      <%= form.text_field :zip_code, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", placeholder: "43215"  %>
    </div>

  </div>
  <div class="my-5">
    <%= form.label :general_note %>
    <%= form.text_field :general_note, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", placeholder: "Sam is super fun!"  %>
  </div>
  <div class="my-5">
    <%= form.label :user_photo %>
    <%= form.file_field :avatar, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", placeholder: "Sam is super fun!"  %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>